-- NoClip loop (separate)
coroutine.wrap(function()
	while true do
		if NoClip then
			NoclipLoop()
		end
		task.wait(0.1)
	end
end)()

-- AutoSell loop (separate)
coroutine.wrap(function()
	while true do
		if AutoSell then
			AutoSellCheck()
		end
		task.wait(1)
	end
end)()
